<div id="container">
  <div id="box-login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div id="avatar">
        <h2 id="register">Registrar</h2>
        <%= image_tag 'profile.svg', alt: 'Avatar', width: '50%' %>
      </div>

      <div class="forms">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "form-control", placeholder: "Email", class: "input" %>
      
        <%= f.password_field :password, autocomplete: "current-password",
        class: "form-control", placeholder: "Senha", class: "input"  %>
      
        <div class="chk">
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>    
          <% end %>
        </div>
      </div> 

      <div class="button">
        <%= f.submit t('.log_in'), id: "button" %>
      </div>
      
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
